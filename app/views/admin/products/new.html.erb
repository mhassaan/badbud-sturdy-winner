<!-- HEADER FOR ADMIN DASHBOARD AFTER LOGIN!-->
<%= render partial: 'partials/admin_header' %>
 <div class="container-fluid">
      <div class="row">
        <%= render partial: 'partials/admin_sidebar' %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class="row justify-content-md-center" style="margin-top:20px;">
              <div class="col-md-6">
                <%= render partial: 'partials/admin_errors' if flash.present?%>
              </div>
          </div>
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">New Product</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group mr-2">
                <a class=" btn btn-outline-primary" href="<%=admin_products_path%>" role="button">BACK</a>
              </div>
            </div>
          </div>
          <!-- CONTENT FOR PRODUCT'S FORM-->
          <%= form_for @product, url: admin_products_path, method:'post' do |f|%>
            <div class="form-group">
              <label for="exampleFormControlInput1">Name</label>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Product name' %>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Strain</label>
              <%= f.select :strain_type, options_for_select(Product::STRAIN_TYPE) , {:include_blank=>"Select Type" }, {class:'form-control'} %>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Description</label>
              <%= f.text_field :desc, class:'form-control'%>
            </div>
            <div class="form-group">
              <label for="exampleFormControlFile1">Photo</label>
              <%= f.file_field :photos, class:'form-control-file', id: 'productfileField', multiple: true %>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Create</button>      
          <%end%>
        </main>
      </div>
    </div>
<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
<script>
  feather.replace()
</script>
