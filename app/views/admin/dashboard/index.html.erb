
<div class="container">
  <div class="row justify-content-md-center" style="margin:5px 0px 5px 0px;">
    <div class="col-md-6">
      <%= render partial:'partials/admin_errors' if flash.present?%>
    </div>
  </div>
  
  <div class="row justify-content-md-center">
    <div class="col-sm-6">
      <%= form_for @user,url: admin_login_path,method:'POST', html:{class: 'form-signin'} do |f| %>
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <%= f.label :email, class: 'sr-only' %>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, class: 'form-control' %>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <%= f.submit "Sign in!", class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>

